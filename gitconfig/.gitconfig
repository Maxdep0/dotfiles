[credential]
    helper = cache --timeout=86400

[user]
    email = 143852415+Maxdep0@users.noreply.github.com 
    name = Maxdep0

[core]
    excludefile = ~/config/gitconfig/.gitignore_global
    editor = nvim
    autocrlf = input
    pager = cat
    untrackedCache = true

[init]
    defaultBranch = main

[color]
    ui = true
    diff = auto
    status = auto
    branch = auto
    interactive = auto

[push]
    default = simple
    autoSetupRemote = true

[pull]
    rebase = true

[merge]
    conflictstyle = diff3

[rebase]
    autoStash = true

[diff]
    tool = nvimdiff
    algorithm = patience

[difftool "nvimdiff"]
    cmd = "nvim -d $LOCAL $REMOTE"
    prompt = false

[help]
    autocorrect = 0

[alias]
    s = status -s
    r = remote -v
    b = branch -vv
    clone-ssh = "!f() { git clone git@github.com:$1/$2.git; }; f"
    clone-https = "!f() { git clone https://github.com/$1/$2.git; }; f"
    cm = "!f() { git commit -m \"$1\"; }; f"
    setssh = "!f() { git remote set-url origin git@github.com:Maxdep0/$1; }; f"
    l = "!git log --color=always --pretty=format:'  %C(yellow)%h %ad%C(red)%d %Creset%s%C(blue) [%cn]' --decorate --date=short | tac"
    alias = "!git config -l | grep alias | cut -c 7-"
    web = "!gh repo view --web"
